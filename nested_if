class Bloodbank
{
    public static void main(String[] args)
    {
        int age=23;
        int weight=48;
        
        if(age>=18)
        {
            if(weight>=50)
            {
                System.out.println("You are eligible to donate blood. Thank you!");
            }
            else
            {
                System.out.println("Weight must be minimum 50 Kgs. You are under weight!");
            }
        }
            else
            {
                System.out.println("Age must be above 18 years. You are under age!");
            }
    }
}
